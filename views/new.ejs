<% layout("/layouts/boilerplate") %> 

<head>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="form-container">
        <h1>Create a New Listing</h1>
        <form method="POST" action="/listings">
            <input name="listing[name]" placeholder="Enter Name" type="text" required>

            <textarea name="listing[discription]" placeholder="Write description" required></textarea>

            <input name="listing[image]" placeholder="Image URL" type="text">

            <input name="listing[price]" placeholder="Enter Price" type="number" required>

            <input name="listing[location]" placeholder="Enter Location" type="text">

            <input name="listing[country]" placeholder="Enter Country" type="text">

            <button type="submit">Submit</button>
        </form>
    </div>
</body>
