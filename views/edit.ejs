<% layout("/layouts/boilerplate") %> 

<body>
    <div class="form-container">
        <h1>Edit a Listing</h1>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
            
            <input name="listing[name]" value="<%= listing.name %>" type="text" required>

            <textarea name="listing[discription]" required><%= listing.discription %></textarea>

            <input name="listing[image]" value="<%= listing.image %>" type="text">

            <input name="listing[price]" value="<%= listing.price %>" type="number" required>

            <input name="listing[location]" value="<%= listing.location %>" type="text">

            <input name="listing[country]" value="<%= listing.country %>" type="text">

            <button type="submit">Update Listing</button>
        </form>
    </div>
</body>
